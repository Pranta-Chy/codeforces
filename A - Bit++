#include<stdio.h>

int main()
{
    int n,i,countpos=0,countneg=0;
    char fun[4];

    scanf("%d",&n);
    for(i=1; i<=n; i++)
    {
        scanf("%s",&fun);
        if(fun[1]=='+')
             countpos=countpos+1;
        else if(fun[1]=='-')
             countneg=countneg+1;
    }
    printf("%d",countpos-countneg);

    return 0;
}
